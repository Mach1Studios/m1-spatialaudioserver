# Vue Frontend Environment Configuration
# Copy this file to .env and adjust values as needed

# Main application URL
# - For local development: 'http://localhost:80'
# - For production: leave empty or use your domain (e.g., 'http://spatialplayer.mach1.tech')
# - If empty, will automatically use the domain the site is served from
VUE_APP_API_URL=''

# Streaming/transcoder URL (for HLS, DASH, and RTMP streams)
# - For local development: 'http://localhost:80'
# - For production: leave empty or use your domain
# - If empty, will automatically use the domain the site is served from
VUE_APP_STREAM_URL=''

# API path prefix
VUE_APP_API_PATH='/api'
